<%- if @event.errors.any? %>
	<div class="alert alert-danger">
		<h4 class="alert-heading"> Oh oh!</h4>
		<p>Error in data</p>
	</div>
<% end -%>


<div class="form-group">
	<%= form_for @event do |f| %>


		<%= f.label :name %><br>
		<%= f.text_field :name, autofocus: true, class: 'form-control' %>

		<%-if @event.errors[:name].any? %>
			<span class="badge badge-pill badge-danger" >
				<%= @event.errors[:name].first %>
			</span>
		<% end %>
		<br>


		<%= f.label :category %><br>
		<%= f.select :category,options_for_select([["Select One", ""], 'Conference','Seminary','Congress','Course']), class: 'form-control' %><br>

		<%-if @event.errors[:category].any? %>
			<span class="badge badge-pill badge-danger" >
				<%= @event.errors[:category].first %>
			</span>
		<% end %>
		<br>


		<%= f.label :place %><br>
		<%= f.text_field :place,  class: 'form-control' %>

		<%-if @event.errors[:place].any? %>
			<span class="badge badge-pill badge-danger" >
				<%= @event.errors[:place].first %>
			</span>
		<% end %>
		<br>


		<%= f.label :address %><br>
		<%= f.text_field :address, class: 'form-control' %>

		<%-if @event.errors[:address].any? %>
			<span class="badge badge-pill badge-danger" >
				<%= @event.errors[:address].first %>
			</span>
		<% end %>
		<br>


		<%= f.label :date_start %><br>
		<%= f.date_select :date_start, class: 'form-control' %><br><br>


		<%= f.label :date_end %><br>
		<%= f.date_select :date_end, class: 'form-control' %><br><br>


		<%= f.label :type %><br>
		<%= f.select :type_event,options_for_select([["Select One", ""], 'Presencial','Virtual']), class: 'form-control' %><br>

		<%-if @event.errors[:type_event].any? %>
			<span class="badge badge-pill badge-danger" >
				<%= @event.errors[:type_event].first %>
			</span>
		<% end %>
		<br>


		<%= f.submit 'Send', :class => 'btn btn-primary' %>	

	<%end %>
</div>
